---
layout: default
class: secondary
---

.writing.container
  %h3.main-title Writing Arichive

  %ol.writing-index
  {% for post in site.posts %}
  {% if post.external_url %}
    %li.external
      %h2
        %a{ href: "{{ post.url }}" } {{ post.title }}
      {{ post.excerpt }}
  {% else %}
    %li
      %h2
        %a{ href: "{{ post.url }}" } {{ post.title }}
      {{ post.excerpt }}
  {% endif %}
  {% endfor %}
